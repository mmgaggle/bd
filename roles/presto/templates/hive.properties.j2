connector.name=hive-hadoop2
hive.metastore.uri=thrift://{{hostvars[groups[['head'][0]][0]]['ansible_ens20f0']['ipv4']['address'] }}:9083
hive.config.resources=/hadoop/etc/hadoop/core-site.xml,/hadoop/etc/hadoop/hdfs-site.xml
hive.s3.endpoint={{ endpoint }}
hive.s3.aws-access-key={{ access_key }}
hive.s3.aws-secret-key={{ secret_key }}
hive.s3.use-instance-credentials=false
hive.s3.staging-directory={{ presto_staging_dir }}
hive.s3.ssl.enabled={{ ssl_endpoint }}
hive.s3.sse.enabled=false

hive.s3.max-connections={{ presto_max_conns }}
hive.s3.connect-timeout={{ presto_conn_timeout }}
hive.s3.socket-timeout={{ presto_socket_timeout }}

hive.s3.max-client-retries={{ presto_max_client_retries }}
hive.s3.max-error-retries={{ presto_max_error_retries }}

hive.s3.max-backoff-time={{ presto_max_backoff_times }}
hive.s3.max-retry-time={{ presto_max_retry_time }}

